{
    "name": "new-file-by-type",
    "displayName": "new file by type",
    "description": "create file by project type and generate template code (根据文件或项目类型创建文件，并自动生成模板代码)",
    "version": "0.1.0",
    "publisher": "Rectcircle",
    "author": {
        "name": "Rectcirle",
        "email": "rectcircle96@gmail.com",
        "url": "https://www.rectcircle.cn/article"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "keywords":[
        "new","file","create", "new java file"
    ],
    "preview":false,
    "license": "SEE LICENSE IN LICENSE",
    "icon": "images/new-file-by-type.png",
    "homepage": "https://github.com/rectcircle/new-file-by-type/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/rectcircle/new-file-by-type.git"
    },
    "galleryBanner": {
        "color": "#1d953f",
        "theme": "dark"
    },
    "activationEvents": [
        "onCommand:new-file-by-type.new",
        "onCommand:new-file-by-type.smart-new-file",
        "onCommand:new-file-by-type.copy-new-file"
    ],
    "main": "./src/extension",
    "contributes": {
        "commands": [
            {
                "command": "new-file-by-type.new",
                "title": "%new-file-by-title.new.title%",
                "category": "New"
            },
            {
                "command": "new-file-by-type.smart-new-file",
                "title": "%new-file-by-title.smart-new-file.title%",
                "category": "New"
            },
            {
                "command": "new-file-by-type.copy-new-file",
                "title": "%new-file-by-title.copy-new-file.title%",
                "category": "New"
            }
        ],
        "keybindings": [
            {
                "command": "new-file-by-type.new",
                "key": "Ctrl+Alt+N"
            }
        ],
        "menus": {
            "editor/context": [{
                "command": "new-file-by-type.smart-new-file",
                "group": "New"
            },{
                "command": "new-file-by-type.copy-new-file",
                "group": "New"
            }],
            "explorer/context": [{
                "command": "new-file-by-type.smart-new-file",
                "group": "New"
            },{
                "command": "new-file-by-type.copy-new-file",
                "group": "New"
            }]
        },
        "configuration": {
            "title": "%new-file-by-type.configuration.title%",
            "properties": {
                "new-file-by-type.code-comments.author": {
                    "default": null,
                    "type": "string",
                    "scope": "window",
                    "description": "%new-file-by-type.code-comments.author.description%"
                },
                "new-file-by-type.code-comments.description": {
                    "default": null,
                    "type": "string",
                    "scope": "window",
                    "description": "%new-file-by-type.code-comments.description.description%"
                },
                "new-file-by-type.code-comments.date-farmat": {
                    "default": "YYYY-MM-DD",
                    "type": "string",
                    "scope": "window",
                    "description": "%new-file-by-type.code-comments.date-farmat.description%"
                },
                "new-file-by-type.code-comments.version": {
                    "default": "0.0.1",
                    "type": "string",
                    "scope": "window",
                    "description": "%new-file-by-type.code-comments.version.description%"
                },
                "new-file-by-type.code-comments.enable": {
                    "default": true,
                    "type": "boolean",
                    "scope": "window",
                    "description": "%new-file-by-type.code-comments.enable.description%"
                },
                "new-file-by-type.code-comments.items": {
                    "default": [
                        "author",
                        "date",
                        "version"
                    ],
                    "type": "array",
                    "scope": "window",
                    "description": "%new-file-by-type.code-comments.items.description%"
                },
                "new-file-by-type.template.defaultIndent": {
                    "default": 0,
                    "type": "number",
                    "scope": "window",
                    "description": "%new-file-by-type.template.defaultIndent.description%"
                },
                "new-file-by-type.template.indents": {
                    "default": {
                        "Java": 0,
                        "JavaScript" : 2
                    },
                    "type": "object",
                    "scope": "window",
                    "description": "%new-file-by-type.template.indents.description%"
                },
                "new-file-by-type.snippets":{
                    "default": [{
                        "category": "Web",
                        "name": "HTML5",
                        "defaultFilename": "index",
                        "defaultSrc": "",
                        "suffix": "html",
                        "body": ["<!DOCTYPE html>", "<html lang=\"${5:en}\">", "<head>", "    <meta charset=\"UTF-8\">", "    <meta name=\"viewport\" content=\"width=${1:device-width}, initial-scale=${2:1.0}\">", "    <meta http-equiv=\"X-UA-Compatible\" content=\"${3:ie=edge}\">", "    <title>${4:Document}</title>", "</head>", "<body>", "    $0", "</body>", "</html>"]
                    }],
                    "type": "array",
                    "scope": "window",
                    "description": "%new-file-by-type.snippets.description%"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "art-template": "^4.12.2",
        "fs-extra": "^6.0.0",
        "moment": "^2.22.1",
        "sprintf-js": "^1.1.1"
    }
}
