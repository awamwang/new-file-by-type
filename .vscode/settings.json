// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "json.schemas": [
        {
            "fileMatch": ["*.schema.json"],
            "url": "http://json-schema.org/draft-07/schema#"
        },
        {
            "fileMatch": ["/template/config.jsonc", "/template/**/config.jsonc"],
            "url": "/src/config.schema.json"
        },
    ],
    "cSpell.words": [
        "Affordance",
        "Bastea",
        "Marcello",
        "tosource"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        "**tpl"
    ],
    "i18n-ally.localesPaths": [
        "template/i18n",
        "template/search/i18n",
        "template/translate/i18n",
        "template/new/afile/i18n",
        "template/new/c-cpp/i18n",
        "template/new/gitignore/i18n",
        "template/new/go/i18n",
        "template/new/java/i18n",
        "template/new/js/i18n",
        "template/new/license/i18n",
        "template/new/python/i18n",
        "template/new/scala/i18n",
        "template/new/ts/i18n",
        "template/new/web/i18n",
        "template/new/js/common/i18n",
        "template/new/js/jquery/i18n",
        "template/new/js/react/i18n",
        "template/new/js/vue/i18n",
        "template/new/ts/angular/i18n",
        "template/new/ts/common/i18n",
        "template/new/ts/react/i18n",
        "template/new/ts/vue/i18n"
    ]
}